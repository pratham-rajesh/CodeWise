# Pattern-Trainer Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Google Gemini AI API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Server Configuration
PORT=3000

# Database Configuration
# Set to 'true' to use MongoDB, 'false' to use in-memory storage
USE_MONGODB=true

# MongoDB Connection String
# Only required if USE_MONGODB=true
MONGODB_URI=mongodb://localhost:27017/pattern-trainer

# Alternative MongoDB configurations:
# MongoDB Atlas (Cloud): mongodb+srv://username:password@cluster.mongodb.net/pattern-trainer
# MongoDB with authentication: mongodb://username:password@localhost:27017/pattern-trainer
# MongoDB with custom port: mongodb://localhost:27018/pattern-trainer

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Node Environment
NODE_ENV=development

# Enable debug logging
DEBUG=false

# API Rate Limiting (requests per minute)
RATE_LIMIT=100

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Session Secret (for production)
# SESSION_SECRET=your-super-secret-session-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_IMAGE_HINTS=true
ENABLE_BLIND75=true
ENABLE_AGENT_METRICS=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Optional: Sentry for error tracking
# SENTRY_DSN=your-sentry-dsn-here

# Optional: Analytics
# GOOGLE_ANALYTICS_ID=your-ga-id-here

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. The .env file is automatically ignored by git
# 3. For production, set these variables in your hosting platform
# 4. MongoDB is optional - the app will work with in-memory storage
# 5. Get your Gemini API key from Google AI Studio
